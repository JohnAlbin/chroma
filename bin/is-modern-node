#!/usr/bin/env node

/* eslint-disable no-process-exit */

'use strict';

// Checks for "v4." or greater.
function atLeastNode4() {
  return /^v([4-9]|\d{2,})\.\S+$/.test(process.version);
}

if (!atLeastNode4()) {
  console.error('Running on Node.js ' + process.version + '; skipping eslint tests.');
  // Return a non-zero (false) value to the shell.
  process.exit(1);
}
