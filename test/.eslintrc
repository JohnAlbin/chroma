{
  // These configuration options override those in the root .eslintrc file.
  "env": {
    "mocha": true
  },
  "globals": {
    "expect": true,
    "path": true,
    "SassyTest": true
  },
  "rules": {
    // Errors.
    "max-nested-callbacks": [2, 4],
    // Disabled.
    // Chai assertions are "unused" expressions.
    "no-unused-expressions": 0
  }
}
